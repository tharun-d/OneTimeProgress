
@{
    ViewBag.Title = "SelectDepartment";
}


<div class="col-md-5 col-md-offset-3">
    <form method="post">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Select Department</h3>
            </div>
            <div class="panel-body">
                <select name="internalDepartment">
                    <option>Select</option>
                    <option>Ramp</option>
                    <option>Catering</option>
                    <option>Cargo</option>
                    <option>Cabin</option>
                </select>
            </div>
            <div class="panel-footer">
                <button type="submit" class="btn-primary">View</button>
            </div>
            @if (IsPost)
            {
                <div class="form-group has-error">
                    <span class="help-block has-error">@ViewBag.Message</span>
                </div>
            }
        </div>
    </form>
</div>